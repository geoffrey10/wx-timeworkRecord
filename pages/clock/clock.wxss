.container {
  padding: 30rpx;
}

.time-display {
  text-align: center;
  margin-bottom: 40rpx;
}

.date {
  font-size: 32rpx;
  color: #666;
  display: block;
}

.time {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
}

.record-display {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.button-group {
  margin-top: 40rpx;
}

.clock-btn {
  margin-bottom: 20rpx;
  background-color: #07c160;
  color: white;
} 